generator client {
  provider   = "prisma-client"
  output     = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String         @id @default(cuid())
  workosUserId  String         @unique
  email         String         @unique
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  gmailAccounts GmailAccount[]
  xAccount      XAccount?
  emailSettings EmailAgentSettings[]
  userAgents    UserAgent[]
}

model GmailAccount {
  id            String   @id @default(cuid())
  userId        String
  email         String   @unique
  accessToken   String
  refreshToken  String?
  expiresAt     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model XAccount {
  id         String   @id @default(cuid())
  userId     String   @unique
  authToken  String
  ct0        String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model EmailAgentSettings {
  id            String   @id @default(cuid())
  userId        String
  labels        String[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Agent {
  id            String   @id @default(cuid())
  description   String

  userAgents  UserAgent[]
}

model UserAgent {
  id        String   @id @default(cuid())
  userId    String
  agentId   String

  displayName   String?
  isEnabled     Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  agent Agent @relation(fields: [agentId], references: [id], onDelete: Cascade)

  conversations UserAgentConversation[]

  @@index([userId])
  @@index([agentId])
  @@unique([userId, agentId])
}

model UserAgentConversation {
  id          String   @id @default(cuid())
  userAgentId String
  title       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userAgent UserAgent @relation(fields: [userAgentId], references: [id], onDelete: Cascade)
  messages  Message[]

  @@index([userAgentId])
}

enum LangChainMessageType {
  human
  ai
  system
  tool
}

model Message {
  id             String              @id @default(cuid())
  conversationId String
  type           LangChainMessageType

  content        Json

  name           String?             // optional "name" field on messages
  additionalKwargs Json?             @map("additional_kwargs")
  responseMetadata Json?             @map("response_metadata")

  /// For ToolMessage / tool results
  toolCallId     String?             @map("tool_call_id")
  toolName       String?             @map("tool_name")

  /// Ordering
  createdAt      DateTime            @default(now())
  seq            Int?

  conversation UserAgentConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
  @@index([conversationId, seq])
}