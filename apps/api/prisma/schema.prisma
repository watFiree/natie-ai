generator client {
  provider   = "prisma-client"
  output     = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String            @id @default(cuid())
  workosUserId     String            @unique
  email            String            @unique
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  gmailAccounts    GmailAccount[]
  xAccount         XAccount?
  emailSettings    EmailIntegrationSettings[]
  userIntegrations UserIntegration[]
  telegramSettings TelegramSettings?
  chats            UserChat[]
  tokenUsages      UserModelTokenUsage[]
}

model GmailAccount {
  id            String   @id @default(cuid())
  userId        String
  email         String   @unique
  accessToken   Bytes
  refreshToken  Bytes
  expiresAt     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model XAccount {
  id         String   @id @default(cuid())
  userId     String   @unique
  authToken  Bytes
  ct0        Bytes
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model EmailIntegrationSettings {
  id            String   @id @default(cuid())
  userId        String
  labels        String[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum IntegrationType {
  email
  x
}

model Integration {
  id            String    @id @default(cuid())
  description   String
  type          IntegrationType

  userIntegrations  UserIntegration[]
}

model UserIntegration {
  id        String   @id @default(cuid())
  userId    String
  integrationId   String

  displayName   String?
  isEnabled     Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  integration Integration @relation(fields: [integrationId], references: [id], onDelete: Cascade)

  chats     UserChat[]

  @@index([userId])
  @@index([integrationId])
  @@unique([userId, integrationId])
}

enum ChatType {
  natie
  email
  x
  telegram
}

model UserChat {
  id          String   @id @default(cuid())
  userId      String
  type        ChatType
  userIntegrationId String?
  title       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userIntegration UserIntegration? @relation(fields: [userIntegrationId], references: [id], onDelete: SetNull)
  messages    Message[]

  @@index([userId])
  @@index([userIntegrationId])
  @@unique([userId, type])
}

enum LangChainMessageType {
  human
  ai
  system
  tool
}

enum MessageChannel {
  web
  telegram
  email
  x
}

model Message {
  id             String              @id @default(cuid())
  conversationId String
  type           LangChainMessageType

  content        Json

  name           String?             // optional "name" field on messages
  additionalKwargs Json?             @map("additional_kwargs")
  responseMetadata Json?             @map("response_metadata")

  /// For ToolMessage / tool results
  toolCallId     String?             @map("tool_call_id")
  toolName       String?             @map("tool_name")

  /// Channel the message came from
  channel        MessageChannel      @default(web)

  /// Ordering
  createdAt      DateTime            @default(now())
  seq            Int?

  conversation UserChat @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
  @@index([conversationId, seq])
}

model ModelPricing {
  id                         String   @id @default(cuid())
  model                      String   @unique
  inputPricePerMillionMicros Int      @default(0)
  outputPricePerMillionMicros Int     @default(0)
  createdAt                  DateTime @default(now())
  updatedAt                  DateTime @updatedAt
}

model UserModelTokenUsage {
  id               String   @id @default(cuid())
  userId           String
  model            String
  inputTokens      BigInt   @default(0)
  outputTokens     BigInt   @default(0)
  totalTokens      BigInt   @default(0)
  inputCostMicros  BigInt   @default(0)
  outputCostMicros BigInt   @default(0)
  totalCostMicros  BigInt   @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([model])
  @@unique([userId, model])
}

model TelegramSettings {
  id             String   @id @default(cuid())
  userId         String   @unique
  telegramUserId String   @unique
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([telegramUserId])
}
