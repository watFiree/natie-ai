generator client {
  provider   = "prisma-client"
  output     = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String            @id @default(cuid())
  workosUserId     String            @unique
  email            String            @unique
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  gmailAccounts    GmailAccount[]
  xAccount         XAccount?
  emailSettings    EmailIntegrationSettings[]
  userIntegrations UserIntegration[]
  telegramSettings TelegramSettings?
  chats            UserChat[]
}

model GmailAccount {
  id            String   @id @default(cuid())
  userId        String
  email         String
  accessToken   Bytes
  refreshToken  Bytes
  expiresAt     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, email])
}

model XAccount {
  id         String   @id @default(cuid())
  userId     String   @unique
  authToken  Bytes
  ct0        Bytes
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model EmailIntegrationSettings {
  id            String   @id @default(cuid())
  userId        String
  labels        String[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum IntegrationType {
  email
  x
}

model Integration {
  id            String    @id @default(cuid())
  description   String
  type          IntegrationType

  userIntegrations  UserIntegration[]
}

model UserIntegration {
  id        String   @id @default(cuid())
  userId    String
  integrationId   String

  displayName   String?
  isEnabled     Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  integration Integration @relation(fields: [integrationId], references: [id], onDelete: Cascade)

  chats     UserChat[]

  @@index([userId])
  @@index([integrationId])
  @@unique([userId, integrationId])
}

enum ChatType {
  natie
  email
  x
  telegram
}

model UserChat {
  id          String   @id @default(cuid())
  userId      String
  type        ChatType
  userIntegrationId String?
  title       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userIntegration UserIntegration? @relation(fields: [userIntegrationId], references: [id], onDelete: SetNull)
  messages    Message[]

  @@index([userId])
  @@index([userIntegrationId])
  @@unique([userId, type])
}

enum LangChainMessageType {
  human
  ai
  tool
}

enum MessageChannel {
  web
  telegram
}

model Message {
  id             String              @id @default(cuid())
  conversationId String
  type           LangChainMessageType

  content        String

  responseMetadata Json?             @map("response_metadata")

  name String? 
  toolCallId String? @map("tool_call_id")
  toolCalls     Json?             @map("tool_calls")
  invalidToolCalls       Json?             @map("invalid_tool_calls")

  channel        MessageChannel      @default(web)

  createdAt      DateTime            @default(now())

  conversation UserChat @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
}

model TelegramSettings {
  id             String   @id @default(cuid())
  userId         String   @unique
  telegramUserId String   @unique
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([telegramUserId])
}
